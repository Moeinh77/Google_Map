<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hasani.moein.taan.events.marker_get_info">

    <EditText
        android:id="@+id/Title"
        android:layout_width="263dp"
        android:layout_height="38dp"
        android:layout_marginTop="34dp"
        android:hint="Title..."
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/description"
        android:hint="A brief description..."
        android:gravity="start"
        android:textSize="15sp"
        android:layout_width="288dp"
        android:layout_height="225dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintHorizontal_bias="0.505" />

    <Button
        android:id="@+id/choose_button"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:background="#2962FF"
        android:fontFamily="sans-serif"
        android:text="Choose a Photo"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <Button
        android:id="@+id/submit"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/choose_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.859"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/test_image"
        android:layout_width="70dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background" />

</android.support.constraint.ConstraintLayout>
